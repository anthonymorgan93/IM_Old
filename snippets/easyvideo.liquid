  <style type="text/css">.product-gallery .main a { display: block }
  .easyvideo-overlay-play-icon {
    position: relative;
    padding: 0;
    margin: 0;
    line-height: 0;
    display: block;
    pointer-events:none;
    z-index: 99999;
  }
  .easyvideo-overlay-play-icon:before {
    content: "\25BA";
    font-family: TimesNewRomanPSMT, sans-serif;
    position: absolute;
    top: 50%;
    left: 50%;
    height: 40px;
    width: 60px;
    margin-top: -20px;
    margin-left: -30px;
    transition: all 0.8s;
    opacity: 0.9;
    background: rgba(0,0,0,.8);
    color: #fff;
    line-height: 40px;
    font-size: 21px;  
    border-radius: 10px;
    pointer-events:none;
    z-index: 99999;
    text-align: center;
  }
  .easyvideo-overlay-play-icon:hover:before {
    opacity: 1;
  }
  .easyvideo-overlay-play-icon img {
    pointer-events: auto;
  }
  </style>  
