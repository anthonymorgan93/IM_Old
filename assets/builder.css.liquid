  .product-detail .product-form .input-row input[type=submit] {
    width: 100%; } }
/* Configurator
-------------------------------------------------------------------- */
.ac-container {
  width: 100%;
  margin: 0 0 20px 0; }
  .ac-container label {
    padding: 5px 0 5px 34px;
    position: relative;
    display: block;
    cursor: pointer;
    color: #333;
    border-bottom: 1px solid #dadad2;
    font-size: 16px; }
    .ac-container label span {
      font-size: 12px;
      color: #8b8f93; }
    .ac-container label strong {
      float: right;
      font-size: 12px;
      color: #333;
      text-transform: capitalize; }
  .ac-container article {
    margin-top: -1px;
    overflow: hidden;
    height: 0px;
    position: relative;
    background-color: #fff;
    border-bottom: 1px solid #dadad2;
    -webkit-transition: height 0.3s ease-in-out;
    -moz-transition: height 0.3s ease-in-out;
    -ms-transition: height 0.3s ease-in-out;
    -o-transition: height 0.3s ease-in-out;
    transition: height 0.3s ease-in-out; }
  .ac-container input {
    display: none; }
  .ac-container input:checked ~ article {
    -webkit-transition: height 0.5s ease-in-out;
    -moz-transition: height 0.5s ease-in-out;
    -ms-transition: height 0.5s ease-in-out;
    -o-transition: height 0.5s ease-in-out;
    transition: height 0.5s ease-in-out; }
  .ac-container input:checked ~ article.ac-small {
    height: 65px; }
  .ac-container input:checked ~ article.ac-medium {
    height: 150px; }
  .ac-container input:checked ~ article.ac-large {
    height: 220px; }
  .ac-container label:after,
  .ac-container input:checked + label:after {
    content: '+';
    position: absolute;
    width: 34px;
    height: 34px;
    left: 0;
    top: 0;
    text-align: center;
    line-height: 34px; }
  .ac-container input:checked + label:after {
    content: '-'; }
  .ac-container .swatches {
    box-sizing: border-box;
    display: inline-block;
    width: 100%;
    margin: 0;
    padding: 0 0 0 34px; }
    .ac-container .swatches li {
      float: left;
      padding: 0;
      margin: 0;
      border: 1px solid #fff;
      list-style: none;
      border-radius: 2px; }
      .ac-container .swatches li:hover {
        border: 1px solid #999; }
      .ac-container .swatches li.selected {
        border: 1px solid #000; }
      .ac-container .swatches li a {
        float: left;
        width: 38px;
        height: 38px;
        border: 2px solid #fff; }
        .ac-container .swatches li a.black {
          background-color: #000; }
        .ac-container .swatches li a.charcoal {
          background-color: #525252; }
        .ac-container .swatches li a.cyan {
          background-color: #3060b7; }
        .ac-container .swatches li a.green {
          background-color: #c6f413; }
        .ac-container .swatches li a.grey {
          background-color: #a2a2a0; }
        .ac-container .swatches li a.indigo {
          background-color: #414b5c; }
        .ac-container .swatches li a.navy {
          background-color: #232c3a; }
